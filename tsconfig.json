{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": ".",
    "allowJs": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx"
  },
  "include": [
    "electron-app/src/**/*",
    "renderer/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}