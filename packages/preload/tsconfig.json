{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "src",
    "allowJs": false,
    "checkJs": false,
    "noEmit": false
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.js", "dist/**", "node_modules"]
}
