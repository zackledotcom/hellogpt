{
  "name": "hellogpt",
  "version": "1.0.0",
  "description": "HelloGPT - A Desktop Chat Application",
  "private": true,
  "workspaces": [
    "electron-app",
    "renderer"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:electron\" \"npm run dev:renderer\"",
    "dev:electron": "npm run dev --workspace=electron-app",
    "dev:renderer": "npm run dev --workspace=renderer",
    "build": "npm run build:renderer && npm run build:electron",
    "build:electron": "npm run build --workspace=electron-app",
    "build:renderer": "npm run build --workspace=renderer",
    "package": "npm run build && npm run package:electron",
    "package:electron": "npm run package --workspace=electron-app"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "6.6.3",
    "@types/jsdom": "21.1.7",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/uuid": "10.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "10.4.21",
    "concurrently": "8.2.2",
    "electron-builder": "^26.0.12",
    "happy-dom": "17.6.3",
    "jsdom": "26.1.0",
    "postcss": "8.5.4",
    "tailwindcss": "4.1.8",
    "ts-node": "10.9.2",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "3.2.1"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.0",
    "@heroicons/react": "2.2.0",
    "better-sqlite3": "11.10.0",
    "date-fns": "4.1.0",
    "electron": "^28.0.0",
    "hnswlib-node": "3.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "14.3.8",
    "react-hot-toast": "2.5.2",
    "uuid": "11.1.0",
    "zustand": "^4.5.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
