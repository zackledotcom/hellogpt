{
  "name": "root",
  "description": "Custom Ollama UI Electron app based on Vite + Tailwind",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "packages/main/start-electron.js",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=23.0.0"
  },
  "volta": {
    "node": "23.0.0"
  },
  "scripts": {
    "clean": "rimraf packages/*/dist",
    "build": "npm run clean && npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "tsc -p packages/main/tsconfig.json",
    "build:preload": "tsc -p packages/preload/tsconfig.json",
    "build:renderer": "tsc -p packages/renderer/tsconfig.json",
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:preload\" \"npm run dev:renderer\"",
    "dev:main": "tsc -p packages/main/tsconfig.json --watch",
    "dev:preload": "tsc -p packages/preload/tsconfig.json --watch",
    "dev:renderer": "tsc -p packages/renderer/tsconfig.json --watch",
    "cleanup": "bash scripts/cleanup-duplicates.sh",
    "test": "jest",
    "start": "npm run build && electron .",
    "compile": "npm run build && electron-builder build --config electron-builder.mjs",
    "fix": "ts-node --esm scripts/fix.ts",
    "typecheck": "npm run typecheck -ws --if-present",
    "create-renderer": "cd packages && npm create vite@latest renderer",
    "integrate-renderer": "npm start --workspace @app/integrate-renderer",
    "init": "npm run create-renderer && npm run integrate-renderer && npm install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/eslint-parser": "^7.27.1",
    "@babel/preset-react": "^7.27.1",
    "@npmcli/map-workspaces": "4.0.2",
    "@playwright/test": "^1.52.0",
    "@types/glob": "^8.1.0",
    "@types/node": "^20.14.8",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "electron": "^31.0.1",
    "electron-playwright-helpers": "^1.7.1",
    "eslint": "^8.57.0",
    "fdir": "^6.4.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "playwright": "^1.44.1",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "tinyglobby": "^0.2.14",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.4.5",
    "vite": "^5.3.1"
  },
  "dependencies": {
    "@app/main": "workspace:*",
    "@google/generative-ai": "^0.12.0",
    "electron": "^31.0.0",
    "llamaindex": "^0.3.17",
    "node-fetch": "^3.3.2",
    "ollama": "^0.5.6"
  }
}
